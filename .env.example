# Server
PORT=10000
APP_URL=https://your-app.onrender.com
NODE_ENV=production

# Shopify OAuth (Partner app)
SHOPIFY_API_KEY=your_key
SHOPIFY_API_SECRET=your_secret
SCOPES=read_customers
# e.g. https://your-app.onrender.com/auth/callback
REDIRECT_URI=

# App Proxy secret from Partner App > Extensions > App proxy
APP_PROXY_SHARED_SECRET=proxy_shared_secret

# Admin panel
ADMIN_PASSWORD=change-this-strong
SESSION_SECRET=change-this-very-secret
EDIT_WINDOW_MINUTES=15
ALLOW_ANONYMOUS=true
AUTO_APPROVE=false

# Database
MONGODB_URI=mongodb+srv://USER:PASS@CLUSTER/dbname?retryWrites=true&w=majority
